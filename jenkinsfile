pipeline {
    agent any

    stages("run tests") {
        parallel {
           stage('Build') {
             agent {
                  docker {
                      image 'node:18-alpine'
                      reuseNode true
                    }  
                }
            
                steps {
                   sh '''
                     npm ci 
                     npm install
                     npm --version
                     node --version
                     npm test
                     test -f index.html
                     '''
                
                    }
                    
                }    
            }
        
            stage('e2e') {
               agent {
                  docker {
                       image 'mcr.microsoft.com/playwright:v1.39.0-jammy'
                       reuseNode true
                    
                    }   
                }
            
                steps {
                  sh '''
                      npm install serve
                      node_modules/.bin/serve -s build &
                      sleep 10
                      npx playwright test --reporter=html
                      '''
                    }
                    
                }   
            }
        }
    }
}
post {
        always {
            junit 'jest-results/junit.xml'
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, icon: '', keepAll: false, reportDir: 'playwright-report', reportFiles: 'index.html', reportName: 'Playright HTML Report', reportTitles: '', useWrapperFileDirectly: true])
             
        }
    } 
}