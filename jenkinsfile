pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                  image:18-alpine
                } 

            }    

            steps {
                sh '''
                
                echo 'list of things'
                ls -la
                npm --version
                node --version
                npm -ci
                npm run build
                ls -la

                '''
            }
        }
    }
}