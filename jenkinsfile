pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                }   reuseNode true

            }   
                  
        
        }    
        stage('test') {
            sh '''
            
            echo 'test stage'

            ''' 
            steps {
                sh '''
                ls -la
                npm --version
                node --version
                npm ci
                npm run build
                ls -la
                '''
             
            }



        }
    }
}