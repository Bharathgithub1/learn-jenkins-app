pipeline {
    agent any

    stages {
        stage('e2e') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.39.0-jammy'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    npm install -g serve
                    serve s build
                    npx playwright test
                '''
            }
        }
    }
}